@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Usuario> SignInManager;


<ul class="navbar-nav ns-auto">
	@if(SignInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
				<i class="fas fa-user me-1"></i> @User.Identity.Name
			</a>
			<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
				<li><a class="dropdown-item" asp-controller="Account" asp-action="Logout"><i class="fas fa-sign-out-alt me-1"></i> Logout</a></li>
			</ul>
		</li>
	}
	else
	{
		<li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-sign-in-alt me-1"></i> Login</a></li>
		<li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register"><i class="fas fa-sign-in-alt me-1"></i> Registrarse</a></li>

	}


</ul>